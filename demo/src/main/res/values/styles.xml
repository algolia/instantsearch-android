<resources>

    <style name="InstantSearchDemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/blue_dark</item>
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/grey_dark</item>
        <item name="android:textColorPrimary">@color/black_light</item>
        <item name="colorControlNormal">@color/grey_dark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white_light</item>
        <item name="searchViewStyle">@style/SearchView</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="actionBarTheme">@style/Toolbar</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">6dp</item>
        <item name="android:background">@color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="Icon">
        <item name="android:padding">4dp</item>
        <item name="android:tint">@color/grey_dark</item>
    </style>

    <style name="Icon.Clickable">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="voiceIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="android:maxWidth">1000dp</item>
        <item name="closeIcon">@drawable/ic_close_hint</item>
        <item name="queryBackground">@drawable/query_background</item>
    </style>

</resources>
