<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.algolia.instantsearch.demo">

    <application
        android:name="com.algolia.instantsearch.demo.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/InstantSearchDemo"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.algolia.instantsearch.demo.home.HomeDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.algolia.instantsearch.demo.filter.facet.FacetListDemo"
            android:exported="true" />

        <activity
            android:name="com.algolia.instantsearch.demo.filter.toggle.FilterToggleDemo"
            android:exported="true" />

        <activity
            android:name=".filter.list.FilterListDemo"
            android:exported="true" />

        <activity
            android:name=".filter.segment.FilterSegmentDemo"
            android:exported="true" />

        <activity
            android:name=".filter.facet.FacetListSearchDemo"
            android:exported="true" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>