<resources>

    <style name="InstantSearchShowcase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/blue_dark</item>
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/grey_dark</item>
        <item name="android:textColorPrimary">@color/black_light</item>
        <item name="colorControlNormal">@color/grey_dark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white_light</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="actionBarTheme">@style/Toolbar</item>
        <item name="android:thumb">@drawable/thumb</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">6dp</item>
        <item name="android:background">@color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="InstantSearchShowcase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InstantSearchShowcase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="InstantSearchShowcase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
