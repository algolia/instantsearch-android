
script(src="https://cdn.jsdelivr.net/docsearch.js/2/docsearch.min.js")

section.hero-section.shrink
  .container
    .hero-container.text-left
      if navPath !== 'index.html'
        figcaption
          if mainTitle
            h1
              | #{mainTitle + ' > '}
              span=title
          else
            h1=title
      else
        .hero-content.text-center
          h2.tagline.
            <img src="assets/img/instantsearch-logo.svg" width="390px" class="instantsearch-logo"/> for <img src="assets/img/android-logo.svg" class="android-logo" width="193px"/>

          h3 Lightning-fast search components for Android app developers


          a(href="https://www.algolia.com/doc/guides/building-search-ui/getting-started/android/", class="btn btn-static-primary btn-lg btn-shadow-dark").
            Get Started <i class="icon icon-arrow-right"></i>

        figure.hero-illustration
          img(src="assets/img/nexus-5-case.svg", width="414", class="nexus-illu hidden-md-down")
